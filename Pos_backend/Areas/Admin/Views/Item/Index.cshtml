@model List<Item>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Item List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

        <div class="container">
            <div class="row pb-3">
                <div class="col-6">
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="Item" asp-action="Upsert" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create New Item
                    </a>
                </div>
            </div>
        </div>

        <table id="tblData" class="display responsive nowrap" width="100% ">
            <thead>
                <tr>
                    @* <th>ID</th> *@
                    <th>Dept Code</th>
                    <th>Category Code</th>
                    <th>Item Code</th>            
                    <th>Category Name</th>              
                    <th>Name EN</th>
                    <th>Name KO</th> 
                    @* <th>Description</th>
                    @* <th>Action</th> *@
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts {
    <script src="~/js/product.js"></script>
}